<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="NIK"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/addnik"
            android:layout_width="293dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/addnama"
            android:layout_width="293dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Tempat Lahir"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/addtmplahir"
            android:layout_width="293dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Tanggal Lahir"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/addtgllahir"
            android:layout_width="293dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Alamat"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/addalamat"
            android:layout_width="293dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Kelamin"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/addkelamin"
            android:layout_width="293dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Agama"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/addagama"
            android:layout_width="293dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textSize="20dp"/>

    <EditText
        android:id="@+id/addstatus"
        android:layout_width="293dp"
        android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Pendidikan"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/addpendidikan"
            android:layout_width="293dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Jabatan"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/addjabatan"
            android:layout_width="293dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:id="@+id/btnsimpan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="20dp"
            android:text="Simpan"
            android:textAlignment="center"
            android:background="@color/Hijau"
            android:textColor="@color/cardview_dark_background" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Edit"
            android:background="@color/merah"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:id="@+id/btnupdate"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btndelete"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:background="@color/merah"
            android:layout_marginRight="20dp"
            android:text="Hapus"
            android:textAlignment="center"
            android:textColor="@color/cardview_dark_background" />
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="View"
            android:textColor="@color/cardview_dark_background"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:background="@color/Hijau"
            android:id="@+id/btnview"/>
    </LinearLayout>



</LinearLayout>